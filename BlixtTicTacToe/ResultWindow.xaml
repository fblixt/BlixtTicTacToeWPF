<Window x:Class="BlixtTicTacToe.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlixtTicTacToe"
        mc:Ignorable="d"
        Title="ResultWindow" Height="260" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image x:Name="ResultImage" Height="100" Width="100" />
            <TextBlock x:Name="ResultText" FontSize="24" FontWeight="Bold" VerticalAlignment="Bottom"/>
        </StackPanel>
        <Button x:Name="CloseResult" Grid.Row="1" Height="30" Width="90" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Close">Close</Button>
    </Grid>
</Window>
